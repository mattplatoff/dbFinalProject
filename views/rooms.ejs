<% roomList = JSON.parse(roomListing); console.log(roomListing)%>
<div class="container-fluid">
    <div class="row">
        <% roomList.forEach(function(room, index) { %>
          <div class="col-md-6">
              <ul class="list-group">
                  <li class="list-group-item active">Room <%= room['Room_no'] %> | <%=room['Type'] %> - Floor <%=room['Floor_no'] %></li>
                  <li class="list-group-item ">For up to <%=room['Capacity'] %> residents</li>
                  <li class="list-group-item">
                      <ul class="list-group">
                          <%=room['Description'] %>
                      </ul>
                  </li>
                  <li class="list-group-item ">Price: <%=room['Price'] %></li>
                  <li class="list-group-item"> Reviews
                      <ul>
                        <% room['Reviews'].forEach(function(review, index) { %>
                          <li><%= review['TextComment'] %></li>
                        <% }); %>
                      </ul>
                  </li>

              </ul>
          </div>
        <% }); %>
    </div>
</div>
